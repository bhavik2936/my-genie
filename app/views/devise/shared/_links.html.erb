<%- if devise_mapping.omniauthable? %>
  <div class="row mt-3">
    <div class="h5 col-12 text-center mx-auto">Sign in with Identity Providers</div>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="col-6 col-md-3 d-flex justify-content-center my-2">
        <%= button_to OmniAuth::Utils.camelize(provider), omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-dark mx-auto" %>
      </div>
    <% end -%>
  </div>
<% end -%>
