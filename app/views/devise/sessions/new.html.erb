<div>
  <div class="row"><h1 class="mx-auto my-2">Who summons me?</h1></div>
  <div class="row"><p class="mx-auto my-2 text-center">Identify yourself!</p></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-2">
      <div class="col-md-8 col-10 row mx-auto">
        <%= f.label :email, class: "col-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-8" %>
      </div>
    </div>

    <div class="row my-2">
      <div class="col-md-8 col-10 row mx-auto">
        <%= f.label :password, class: "col-4" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-8" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row my-2">
        <div class="col-md-8 col-10 row mx-auto">
          <div class="col-4"></div>
          <div class="col-8">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 col-12 text-center">
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "" %>
      </div>
      <div class="col-md-6 col-12 text-center">
        <%= f.submit "I want to meet Genie!", class: "" %>
      </div>
    </div>
  <% end %>
</div>
