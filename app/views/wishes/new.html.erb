<h1>New Wish</h1>

<%= form_for [@user, @wish] do |form| %>
  <div class="errors my-3 text-danger">
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>
    <% if @wish.errors.any? %>
      <% @wish.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>
    <%= alert %>
  </div>

  <div>
    <%= form.label :wish_statement %><br>
    <%= form.text_field :wish_statement %>
  </div>

  <div>
    <%= form.submit "Make a Wish" %>
  </div>
<% end %>
