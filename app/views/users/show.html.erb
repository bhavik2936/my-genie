<div>
  <div class="row"><div class="col-12 text-center h1">Hello Master!</div></div>
  <div class="row m-2"><div class="col-12 text-center">This many information I have about you!</div></div>

  <div class="row">
    <div class="col-md-8 col-10 mx-auto">
      <div class="row my-md-2 my-3">
        <div class="col-md-6">Name</div>
        <div class="col-md-6 font-weight-bold"><%= current_user.name %></div>
      </div>
      <div class="row my-md-2 my-3">
        <div class="col-md-6">Email</div>
        <div class="col-md-6 font-weight-bold"><%= current_user.email %></div>
      </div>
      <div class="row my-md-2 my-3">
        <div class="col-md-6">Wish Left</div>
        <div class="col-md-6 font-weight-bold"><%= current_user.wish_count %></div>
      </div>
      <div class="row">
        <div class="mx-auto my-2"><%= link_to "Edit Account Details", edit_user_registration_path %></div>
      </div>
    </div>
  </div>
</div>
