<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div class="errors my-3 text-danger">
        <% @user.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.submit submit_text %>
  </div>
<% end %>
