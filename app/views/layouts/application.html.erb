<!DOCTYPE html>
<html>
  <head>
    <title>MyGenie</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
    <div class="container">
    <% if notice %>
      <div class="errors col-md-8 col-10 row mx-auto"><div class="col-12 my-3 alert alert-info"><%= notice %></div></div>
    <% end %>
    <% if alert %>
      <div class="errors col-md-8 col-10 row mx-auto"><div class="col-12 my-3 alert alert-warning"><%= alert %></div></div>
    <% end %>
      <%= yield %>
    </div>
  </body>
</html>
